<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seu.cose.easytrip.fragment.UserInfoFragment"
    android:background="@color/windowsBackground">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:divider="@drawable/linearlayout_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/userinfo_head"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|left"
                android:text="头像"
                android:textColor="@color/textColor" />

            <ImageView
                android:id="@+id/userPhotoView"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_blank_head" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|left"
                android:text="账号"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/account_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|right"
                android:text="账号" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|left"
                android:text="用户名"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/userName_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|right"
                android:text="用户名" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|left"
                android:text="性别"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/sex_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|right"
                android:text="性别" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|left"
                android:text="年龄"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/age_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|right"
                android:text="年龄" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|left"
                android:text="地址"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/address_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.18"
                android:gravity="center_vertical|right"
                android:text="地址" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_next" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
